@model AdminUsersViewModel
@{
    ViewData["Title"] = "User Administration";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Userame
            </th>
            <th>
                Email
            </th>
            <th>
                Add to Role
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.Username
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    <form method="post" asp-controller="Users" asp-action="AddToRole">
                        <div class="row">
                            <div class="col-md-4">
                                <input type="hidden" name="UserId" value="@user.Id" />
                                <select name="Role" asp-items="@Model.Roles" class="form-control"></select>
                            </div>
                            <div class="col-md-4">
                                <input type="submit" class="btn btn-default" value="Add to Role" />
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

